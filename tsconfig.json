{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"rootDir": "./",
		"baseUrl": ".",
		"outDir": "./dist",
		"paths": {
			"@config/*": ["src/config/*"],
			"@modules/*": ["src/modules/*"],
			"@shared/*": ["src/shared/*"]
		},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	}
}
