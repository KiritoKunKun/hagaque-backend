{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"strictPropertyInitialization": false,
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"@config/*": ["src/config/*"],
			"@database/*": ["src/database/*"],
			"@shared/*": ["src/shared/*"]
		},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true
	}
}
